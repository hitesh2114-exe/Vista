<% layout("/layouts/boilerplate") %>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            opacity: 0.7;
            margin-top: 1.5rem;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.15rem;
            padding: 1rem;
            display: flex;
            align-items: center;
            margin-left: 2rem;
            margin-top: 0.5rem;
        }
    </style>

    <div class="fil">
        <div id="filters">
            <div class="filter trending" id="trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter"  id="rooms">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter" id="iconicCity">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic city</p>
            </div>
            <div class="filter" id="mountain">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountain</p>
            </div>
            <div class="filter" id="castle">
                <div><i class="fa-solid fa-chess-rook"></i></div>
                <p>Castle</p>
            </div>
            <div class="filter" id="pool">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter" id="camp">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter" id="farm">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter" id="arctic">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter" id="dome">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Dome</p>
            </div>
            <div class="filter" id="boat">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Diaplay total after taxes</label>
                </div>
            </div>

        </div>
    </div>

    <br>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1  row-cols-xs-1">
        <% for(let list of allListings){ %>
            <a href="/listings/<%= list._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%- list.image.url %>" class="card-img-top" alt="listing_image " style="height: 20rem;">
                    <div class="card-img-overlay">check out?</div>
                    <div class="card-body">
                        <p class="card-text">
                            <b> <%- list.title %> <br> </b>
                            &#8377; <%= list.price ? list.price.toLocaleString("en-IN") : "N/A" %> /night &nbsp;&nbsp;
                                <i class="tax-info">+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>

    </div>
    </body>

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if (info.style.display !== "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>